<div class="container mt-4">
  <h1>Add Bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="mb-3">
      <%= f.label :movie_id, "Select Movie" %>
      <%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: "Choose a movie", class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control", placeholder: "Enter comment" %>
    </div>
    <%= f.button :submit, "Create Bookmark", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to List", list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
